@using Barber.Data.Models
@using Barber.Data.models
@model List<Hairstyle>

@{
    ViewData["Title"] = "Hairstyles";
    var gender = ViewBag.Gender as string;  // ← get it from ViewBag
}

<h2 class="text-center mt-4">Hairstyles for @gender</h2>

<div class="container">
    <div class="row mt-4">
        @foreach (var item in Model)
        {
            <div class="col-md-2 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="@item.ImageUrl" class="card-img-top" style="height:150px; object-fit:cover;" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-center">@item.Title</h5>
                        <div class="d-flex justify-content-between align-items-center gap-2 mt-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info flex-fill">
                                Details
                            </a>
                            <form asp-controller="Favorites" asp-action="Add" method="post" class="m-0 p-0 flex-fill">
                                <input type="hidden" name="hairstyleId" value="@item.Id" />
                                <input type="hidden" name="gender" value="@gender" />
                                <button type="submit" class="btn btn-sm btn-warning w-100">
                                    ♡ Favorites
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<a href="javascript:history.back()" class="btn-back">
    ← Back
</a>

<style>
    .btn-back {
        position: fixed;
        bottom: 70px;
        left: 20px;
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        z-index: 1000;
        transition: background-color 0.3s ease;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }
</style>

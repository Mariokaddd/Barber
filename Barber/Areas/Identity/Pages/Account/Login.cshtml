@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: url('/images/Login/LoginPhoto.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.55);
        z-index: -1;
    }

    nav.navbar {
        width: 100%;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 2px 8px rgba(0,0,0,0.12);
        padding: 0.75rem 1rem;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 10;
    }

    nav .container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .navbar-nav {
        display: flex;
        gap: 1.5rem;
    }

    .nav-link {
        font-weight: 600;
        color: #007bff;
        transition: color 0.2s ease;
        text-decoration: none;
    }

        .nav-link:hover, .nav-link.active {
            color: #0056b3;
            text-decoration: underline;
        }

    .login-wrapper {
        /* оставям margin-top, за да не е под navbar */
        margin-top: 70px;
        height: calc(100vh - 70px);
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 1rem;
    }

    .login-container {
        background: rgba(255, 255, 255, 0.97);
        padding: 3rem 3rem 2rem 3rem;
        border-radius: 15px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
        width: 400px;
        max-width: 100%;
        animation: fadeInScale 0.4s ease forwards;
    }

    @@keyframes fadeInScale {
        0%

    {
        opacity: 0;
        transform: scale(0.95);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }

    }

    h1 {
        text-align: center;
        margin-bottom: 1.5rem;
        font-weight: 700;
        color: #222;
        letter-spacing: 0.03em;
    }

    h2 {
        font-weight: 600;
        margin-bottom: 1rem;
        color: #444;
        font-size: 1.1rem;
    }

    .form-floating > input:focus + label {
        color: #007bff;
        font-weight: 600;
    }

    button.btn-primary {
        transition: background-color 0.25s ease, box-shadow 0.25s ease;
        font-size: 1.1rem;
        padding: 0.55rem 0;
        border-radius: 6px;
        width: 100%;
    }

        button.btn-primary:hover {
            background-color: #0056b3;
            box-shadow: 0 0 14px #0056b3;
        }

    .checkbox label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
        color: #444;
        cursor: pointer;
        user-select: none;
    }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    a {
        color: #007bff;
        text-decoration: none;
        transition: color 0.2s ease;
    }

        a:hover {
            color: #004085;
            text-decoration: underline;
        }

    .mb-3 {
        margin-bottom: 1.25rem !important;
    }

    .links {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 0.9rem;
        color: #333;
    }

        .links p {
            margin: 0.35rem 0;
        }
</style>

<div class="overlay"></div>

<div class="login-wrapper">
    <div class="login-container" role="main" aria-labelledby="login-title">
        <h1 id="login-title">@ViewData["Title"]</h1>
        <form id="account" method="post" novalidate>
            <h2>Use a local account to log in.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" type="email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>

            <div class="links">
                <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

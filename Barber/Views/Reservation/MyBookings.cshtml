@model IEnumerable<BookingViewModel>

<h2 class="text-center my-4">Моите резервации</h2>

@if (!Model.Any())
{
    <p class="text-center text-muted">Все още нямате резервации.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Час</th>
                <th>Име</th>
                <th>Фамилия</th>
                <th>Телефон</th>
                <th>Статус</th>
                <th></th> <!-- бутон -->
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Date.ToShortDateString()</td>
                    <td>@r.Time.ToString(@"hh\:mm")</td>
                    <td>@r.FirstName</td>
                    <td>@r.LastName</td>
                    <td>@r.Phone</td>
                    <td>@(r.IsBooked ? "Запазена" : "Свободна")</td>
                    <td>
                        <form asp-action="Cancel" asp-route-id="@r.Id" method="post" onsubmit="return confirm('Сигурни ли сте, че искате да откажете тази резервация?');">
                            <button type="submit" class="btn btn-danger btn-sm">Откажи</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

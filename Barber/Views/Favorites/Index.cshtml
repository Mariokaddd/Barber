
@model List<Barber.Data.models.Hairstyle>

<h2 class="text-center mt-4">Your Favorites</h2>

@if (!Model.Any())
{
    <p class="text-center text-muted">No favorite haircuts saved.</p>
}
else
{
    <div class="row row-cols-2 row-cols-md-4 g-4">
        @foreach (var h in Model)
        {
            <div class="col">
                <div class="card h-100 text-center">
                    <img src="@h.ImageUrl" class="card-img-top" style="object-fit:cover; height:150px;" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@h.Title</h5>
                        <div class="d-flex justify-content-between mt-2">
                            <form asp-action="Remove" asp-controller="Favorites" method="post">
                                <input type="hidden" name="hairstyleId" value="@h.Id" />
                                <button type="submit" class="btn btn-sm btn-danger flex-fill">Remove</button>
                            </form>
                            <a asp-controller="Hairstyles" asp-action="Details" asp-route-id="@h.Id" class="btn btn-sm btn-success flex-fill">
                                Reserve
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
